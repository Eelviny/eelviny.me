---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <icon>{{ site.url }}/assets/images/icon64.png</icon>
  <link href="{{ site.url }}/"/>
  <link type="application/atom+xml" rel="self" href="{{ site.url }}/feed.xml" rel="self" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.title | slugify }}</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>
  <rights>Â© {{ site.time | date: '%Y' }} {{ site.author.name }}</rights>
  {% for post in site.posts %}
    <entry>
      <title>{{ post.title }}</title>
      <link href="{{ site.url }}{{ post.url }}" />
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <id>{{ post.title | slugify }}</id>
      <summary>{{ post.excerpt | strip_html | xml_escape }}</summary>
      <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
  {% endfor %}
</feed>
